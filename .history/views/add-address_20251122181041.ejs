<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Address</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="font-'helvetica_now_display' border-box m-0 p-0 overflow-x-hidden">

<%- include('./partials/header') %>




<!-- ADDRESS FORM CONTAINER -->
<div class="w-[100vw] flex justify-center items-start mt-20">
    <div class="bg-white/60 backdrop-blur-xl border border-white/20 shadow-2xl rounded-3xl p-10 w-[60vw] min-h-[50vh] max-h-[76vh] mt-8">

        <h2 class="text-3xl font-bold mb-8 text-center">
            Add Delivery Address
        </h2>

        <form action="/add-address" method="POST" class="grid grid-cols-2 gap-5">

            <!-- FULL NAME -->
            <div class="flex flex-col col-span-2">
                <label class="text-lg mb-2">Full Name</label>
                <input type="text" name="fullName"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="Your full name" required>
            </div>

            <!-- PHONE -->
            <div class="flex flex-col">
                <label class="text-lg mb-2">Phone</label>
                <input type="text" name="phone" maxlength="10" minlength="10"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="10-digit number" required>
            </div>

            <!-- PINCODE -->
            <div class="flex flex-col">
                <label class="text-lg mb-2">Pincode</label>
                <input type="text" name="pincode" maxlength="6" minlength="6"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="Pincode" required>
            </div>

            <!-- ADDRESS LINE 1 -->
            <div class="flex flex-col col-span-2">
                <label class="text-lg mb-2">Address Line 1</label>
                <input type="text" name="line1"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="House No, Street, Locality" required>
            </div>

            <!-- ADDRESS LINE 2 -->
            <div class="flex flex-col col-span-2">
                <label class="text-lg mb-2">Address Line 2 (Optional)</label>
                <input type="text" name="line2"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="Landmark / Apartment (optional)">
            </div>

            <!-- CITY -->
            <div class="flex flex-col">
                <label class="text-lg mb-2">City</label>
                <input type="text" name="city"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="City" required>
            </div>

            <!-- STATE -->
            <div class="flex flex-col">
                <label class="text-lg mb-2">State</label>
                <input type="text" name="state"
                    class="rounded-xl p-3 bg-white border border-black/20 focus:outline-none"
                    placeholder="State" required>
            </div>

            <!-- SUBMIT BUTTON -->
            <div class="col-span-2 flex justify-center ">
                <button type="submit"
                    class="px-16 py-4 bg-black text-white text-xl font-semibold rounded-2xl hover:bg-neutral-900 transition">
                    Save Address
                </button>
            </div>

        </form>
    </div>
</div>


<script>
    setTimeout(() => {
        const flash = document.getElementById("flashMessage");
        if (flash) {
            flash.style.transition = "opacity 0.8s";
            flash.style.opacity = "0";
            setTimeout(() => flash.remove(), 800);
        }
    }, 1200);
</script>

<%- include('./partials/footer') %>

</body>
</html>